<div id="Grid"></div>

<script>
    $(document).ready(() => {
        var screenHeight = (window.innerHeight || document.documentElement.clientHeight || document.body.clientHeight);

        $("li a, li, li ul").removeClass("active");
        $("#liQuestionVideo").addClass("active");

        $("#Grid").kendoGrid({
            dataSource: {
                type: "json",
                transport: {
                    read: {
                        url: "/ManageQuestionVideo/GetAllModules",
                       // data: { LanguageID: $("#LanguageID").val() }
                    },
                },
                serverPaging: true,
                schema: {
                    type: 'json',
                    data: 'msg',
                    total: "total",
                    model: {
                        id: "ModuleName",
                        fields: {
                           // LanguageID: { type: "guid" },
                            ModuleName: { type: "string" },
                            SectionName: { type: "string" },
                            Name: { type: "string" },
                            CreatedDateTime: { type: "date" },
                            ModifiedDateTime: { type: "date" },
                            CreatedName: { type: "string" },
                            ModifiedName: { type: "string" }

                        }
                    }
                },
                pageSize: 100
            },
            height: (screenHeight > 768) ? screenHeight - 310 : 670,
            sortable: false, groupable: false, filterable: true, reorderable: false, resizable: true, noRecords: true,
            selectable: "row",
            messages: {
                noRecords: "No Record Found."
            },
            pageable: { refresh: true, pageSizes: ['All', 20, 35, 50, 100], buttonCount: 5 },
            dataBound: function () { for (var i = 0; i < $("#Grid").columns.length; i++) { if (i !== 0) { $("#Grid").autoFitColumn(i); } } },

            columns: [{
                template: '<button class="btn btn-primary jsModuleQuestion" title="Manage  Modules Questions" data-ModuleID ="#: ModuleID #" data-ModuleSectionID ="#: ModuleSectionID #" ><i class="mdi mdi-nfc-variant"></i></button',
                width: 20
            },
          
            { field: "ModuleName", title: "Module", width: 80 },
            { field: "SectionName", title: "Section", width: 80 },


                //{ field: "CreatedName", title: "Created By", width: 120, filterable: false },
                //{ field: "CreatedDateTime", title: "Created Date", format: "{0:dd-MMM-yyyy}", parseFormats: ["MM/dd/yyyy"], width: 120, filterable: false },
                // { field: "ModifiedName", title: "Modified By", width: 120, template: '#if(data.ModifiedName === null){#<span class="badge badge-danger"> No one Modified </span>#}else {##: ModifiedName ##  }#', filterable: false },
                // { field: "ModifiedDateTime", title: "Modified Date", width: 120, template: '#if(data.ModifiedDateTime === null){#<span class="badge badge-danger"> Never Modified </span>#}else {##: kendo.toString(kendo.parseDate(ModifiedDateTime), "dd-MMM-yyyy") ##  }#', filterable: false }
            ]
        });
    });

    $(document).on("click", ".jsModuleQuestion", function () {
        var ModuleID = $(this).data("moduleid");
        var ModulesectionID = $(this).data("modulesectionid");
        var LanguageID = $(this).data("languageid");
        window.open(GetBaseURL() + "ManageQuestionVideo/ModuleQuestions?ModuleID=" + ModuleID + "&ModulesectionID=" + ModulesectionID, "_blank");


    });

</script>







