@model Business_Model.Model.Competitor
@using System.Configuration;
@{

    var LanguageList = ViewBag.Language as IEnumerable<Business_Model.Model.LanguageModule>;
    decimal _ProgressCompetitiorAnalysis = 0.0m; decimal _ProgressSWOT = 0.0m;
    decimal _ProgressCompetitiorAnalysisUnit = 100m; decimal _ProgressSWOTUnit = 25.0m;
}


<input type="hidden" id="JsModuleID" value="@((int)Business_Model.Model.Module.TheBusiness)" />
<input type="hidden" id="JsModuleSectionID" value="@((int)Business_Model.Model.ModuleSection.TheBusiness_Competitors)" />
<div class="row" id="validation">
    <div class="col-lg-9 col-xlg-10 col-md-8">
        <div class="card wizard-content">
            <div class="card-body">
                <div class="row " style="margin: 0 0px 2px;">
                    <div class="col-md-5 align-self-center">
                        <h4 class="card-title" id="1"></h4>
                    </div>
                    <div class="col-md-7 align-self-center text-right">
                        <div class="d-flex justify-content-end align-items-center">
                            <i class="mdi mdi-arrow-left"></i>  @Html.ActionLink("Back to Overview", "Index", "ModuleCourse", new { ControllerName = "Business", ActionName = "CompetitorAnalysis", ModuleID = (int)Business_Model.Model.Module.TheBusiness, SectionID = (int)Business_Model.Model.ModuleSection.TheBusiness_Competitors }, new { @class = "" })
                        </div>
                    </div>
                </div>
                <form class="form-material m-t-40">

                    <input type="hidden" id="jsonRoleInCompany" value='@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model))' />
                    <input type="hidden" id="EntityState" name="EntityState" value="@Model.EntityState" />
                    <input type="hidden" id="ClientID" name="ClientID" value="@Model.ClientID" />

                    @*<input type="hidden" id="ProgressValue" name="ProgressValue" value="@Model.ProgressValue" />*@
                    <!-- Step 1 -->
                    <h3 class="text-center">Competitor analysis</h3>
                    <section>
                        <div class="row">
                            <div class="col-md-12">
                                @if (Model.CompetitorAnalysis.Count() > 0)
                                {
                                    _ProgressCompetitiorAnalysis = _ProgressCompetitiorAnalysisUnit;
                                    <table class="tablesaw table-bordered table-hover table no-wrap tablesaw-sortable tablesaw-swipe" data-tablesaw-mode="swipe" data-tablesaw-sortable="" data-tablesaw-sortable-switch="" data-tablesaw-minimap="" data-tablesaw-mode-switch="">
                                        <thead>
                                            <tr>
                                                <th scope="col" data-tablesaw-sortable-col="" data-tablesaw-priority="persist" class="border tablesaw-sortable-head tablesaw-swipe-cellpersist" data-tablesaw-sortable-numeric="false">
                                                    Name
                                                </th>
                                                <th scope="col" data-tablesaw-sortable-col="" data-tablesaw-priority="persist" class="border tablesaw-sortable-head tablesaw-swipe-cellpersist" data-tablesaw-sortable-numeric="false">
                                                    Location
                                                </th>
                                                <th scope="col" data-tablesaw-sortable-col="" data-tablesaw-priority="persist" class="border tablesaw-sortable-head tablesaw-swipe-cellpersist" data-tablesaw-sortable-numeric="false">
                                                    Website
                                                </th>
                                                <th scope="col" data-tablesaw-sortable-col="" data-tablesaw-priority="persist" class="border tablesaw-sortable-head tablesaw-swipe-cellpersist" data-tablesaw-sortable-numeric="false">
                                                    Offering
                                                </th>
                                                <th scope="col" data-tablesaw-sortable-col="" data-tablesaw-priority="persist" class="border tablesaw-sortable-head tablesaw-swipe-cellpersist" data-tablesaw-sortable-numeric="false">
                                                    Pricing
                                                </th>
                                                <th scope="col" data-tablesaw-sortable-col="" data-tablesaw-priority="persist" class="border tablesaw-sortable-head tablesaw-swipe-cellpersist" data-tablesaw-sortable-numeric="false">
                                                    Your Differentiator

                                                </th>
                                                <th scope="col" data-tablesaw-sortable-col="" data-tablesaw-priority="persist" class="border tablesaw-sortable-head tablesaw-swipe-cellpersist" data-tablesaw-sortable-numeric="false">


                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody class="jsContainerCompetitorAnalysis">



                                            @foreach (var item in Model.CompetitorAnalysis)
                                            {
                                                <tr>
                                                    <td>
                                                        <input type="text" class='form-control  progress-required jsName' name="Name" value="@item.Name" readonly />
                                                        <input type="hidden" class="jsCompetitorAnalysisID" name="CompetitorAnalysisID" />
                                                    </td>
                                                    <td>
                                                        <input type="text" class='form-control  progress-required jsLocation' name="Location" value="@item.Location" readonly />
                                                    </td>
                                                    <td>
                                                        <input type="text" class='form-control  progress-required jsWebsite' name="Website" value="@item.Website" readonly />
                                                    </td>
                                                    <td>
                                                        <input type="text" class='form-control  progress-required jsOffering' name="Offering" value="@item.Offering" readonly />
                                                    </td>
                                                    <td>
                                                        <input type="text" class='form-control  progress-required jsPricing' name="Pricing" value="@item.Pricing" readonly />
                                                    </td>
                                                    <td>
                                                        <input type="text" class='form-control  progress-required jsDifferentiator' name="Differentiator" value="@item.Differentiator" readonly />
                                                    </td>
                                                    <td></td>
                                                </tr>
                                            }





                                        </tbody>
                                    </table>
                                }
                            </div>

                        </div>

                    </section>
                    <!-- Step 2 -->
                    <h3 class="text-center">SWOT</h3>
                    <section>
                        @if (Model.SWOT.Strengths != null)
                        {
                            _ProgressSWOT = _ProgressSWOT + _ProgressSWOTUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "Strengths").FirstOrDefault().QuestionText : "" )  </label> <br />
                                        <select multiple data-role="tagsinput" class="form-control ideatextarea custom-select col-12" id="Strengths" name="Strengths" disabled>


                                            @foreach (var item in Model.SWOT.Strengths.Split(','))
                                            {
                                                <option value="@item">@item</option>
                                            }

                                        </select>

                                    </div>
                                </div>

                            </div>
                        }
                        @if (Model.SWOT.Weaknesses != null)
                        {
                            _ProgressSWOT = _ProgressSWOT + _ProgressSWOTUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "Weaknesses").FirstOrDefault().QuestionText : "" )  </label> <br />
                                        <select multiple data-role="tagsinput" class="form-control ideatextarea custom-select col-12" id="Weaknesses" name="Weaknesses" disabled>


                                            @foreach (var item in Model.SWOT.Weaknesses.Split(','))
                                            {
                                                <option value="@item">@item</option>
                                            }

                                        </select>

                                    </div>
                                </div>

                            </div>
                        }
                        @if (Model.SWOT.Opportunities != null)
                        {
                            _ProgressSWOT = _ProgressSWOT + _ProgressSWOTUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "Opportunities").FirstOrDefault().QuestionText : "" )  </label> <br />
                                        <select multiple data-role="tagsinput" class="form-control ideatextarea custom-select col-12" id="Opportunities" name="Opportunities" disabled>

                                            @foreach (var item in Model.SWOT.Opportunities.Split(','))
                                            {
                                                <option value="@item">@item</option>
                                            }

                                        </select>

                                    </div>
                                </div>

                            </div>
                        }
                        @if (Model.SWOT.Threats != null)
                        {
                            _ProgressSWOT = _ProgressSWOT + _ProgressSWOTUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "Threats").FirstOrDefault().QuestionText : "" )  </label> <br />
                                        <select multiple data-role="tagsinput" class="form-control ideatextarea custom-select col-12" id="Threats" name="Threats" disabled>

                                            @foreach (var item in Model.SWOT.Threats.Split(','))
                                            {
                                                <option value="@item">@item</option>
                                            }

                                        </select>

                                    </div>
                                </div>

                            </div>
                        }

                    </section>

                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-xlg-2 col-md-4">
        <div class="stickyside">
            <div class="list-group" id="top-menu">
                @if (ViewBag.RateInfo != null)
                {
                    if (ViewBag.RateInfo.Rating != 0.0m)
                    {
                        <a href="#1" class="list-group-item" style="text-align:center">
                            <div data-label="@(Math.Round(ViewBag.RateInfo.Rating))%" class="css-bar css-bar-@(Math.Round(ViewBag.RateInfo.Rating)) css-bar-lg css-bar-success" style="cursor:pointer"></div>
                        </a>
                    }
                    if (!string.IsNullOrEmpty(ViewBag.RateInfo.Note))
                    {
                        <a href="#1" class="list-group-item">
                            <span class="badge badge-info badge-info">NOTE</span> <br />
                            @ViewBag.RateInfo.Note
                        </a>
                    }
                }

                @{
                    Html.RenderAction("Chat", "Chat");
                }
                <br />

                <a href="#1" class="list-group-item">
                    Competitor analysis
                    <div class="pull-right" style="text-align:right">@(Math.Round(_ProgressCompetitiorAnalysis))% <i class="fa fa-level-up text-success"></i></div>
                    <div class="progress" style="height:auto">
                        <div class="progress-bar bg-primary" id="IdeaProgress" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width:@(Math.Round(_ProgressCompetitiorAnalysis))%; height: 6px;"> <span class="sr-only">@(Math.Round(_ProgressCompetitiorAnalysis))% Complete</span></div>
                    </div>
                </a>
                <a href="#22" class="list-group-item">
                    SWOT

                    <div class="pull-left" style="text-align:right">@(Math.Round(_ProgressSWOT))% <i class="fa fa-level-up text-success"></i></div>
                    <div class="progress" style="height:auto">
                        <div class="progress-bar bg-info" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width:@(Math.Round(_ProgressSWOT))%; height: 6px;"> <span class="sr-only">@(Math.Round(_ProgressSWOT))% Complete</span></div>
                    </div>
                </a>



            </div>
        </div>
        <br />
        <div class="stickyside">
            <div class="list-group" id="top-menu">
                <div class="card card-body">
                    <div class="row align-items-center">
                        <p>Supplier List</p>
                        <div class="col-md-12">
                            @foreach (var sup in ViewBag.BusinessSupplier)
                            {


                                <div class="col-md-6">
                                    <a href="~/RecommendDocumentation/Packages/@sup.SupplierID"><img src="@ConfigurationManager.AppSettings["SupplierBaseUrl"]/Content/Images/@(sup.ImageID == null ? "profile-dummy.png" : sup.ImageID)" width="50" alt="user" class="img-fluid"></a>

                                    <address>
                                        @sup.CompanyName
                                    </address>
                                </div>


                            }
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>


