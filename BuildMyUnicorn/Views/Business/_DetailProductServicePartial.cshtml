@using System.Configuration;
@using System.ComponentModel;
@model Business_Model.Model.ProductService
@{ int Questions = 12; int Answered = 0; }
@{
    decimal _ProgressAboutProduct = 0.0m; decimal _ProgressMVP = 0.0m;
    decimal _ProgressAboutProductUnit = 11.11m; decimal _ProgressMVPUnit = 33.33m;
    var LanguageList = ViewBag.Language as IEnumerable<Business_Model.Model.LanguageModule>;
}
<input type="hidden" id="JsModuleID" value="@((int)Business_Model.Model.Module.TheBusiness)" />
<input type="hidden" id="JsModuleSectionID" value="@((int)Business_Model.Model.ModuleSection.TheBusiness_ProductorService)" />
<div class="row" id="validation">
    <div class="col-lg-9 col-xlg-10 col-md-8">
        <div class="card wizard-content">
            <div class="card-body">
                <div class="row " style="margin: 0 0px 2px;">
                    <div class="col-md-5 align-self-center">
                        <h4 class="card-title" id="1"></h4>
                    </div>
                    <div class="col-md-7 align-self-center text-right">
                        <div class="d-flex justify-content-end align-items-center">
                            <i class="mdi mdi-arrow-left"></i>  @Html.ActionLink("Back to Overview", "Index", "ModuleCourse", new { ControllerName = "Business", ActionName = "ProductService", ModuleID = (int)Business_Model.Model.Module.TheBusiness, SectionID = (int)Business_Model.Model.ModuleSection.TheBusiness_ProductorService }, new { @class = "" })
                        </div>
                    </div>
                </div>
                <form class="form-material m-t-40">
                    <input type="hidden" id="ProductServiceID" name="ProductServiceID" value="@Model.ProductServiceID" />

                    <!-- Step 1 -->
                    <h4 class="text-center bold">About Product</h4>
                    <section>
                        @if (!string.IsNullOrEmpty(Model.AboutProduct.PSSelling))
                        {
                            _ProgressAboutProduct = _ProgressAboutProduct + _ProgressAboutProductUnit;
                            <div class="row">
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @{ var arrayPSSelling = String.IsNullOrEmpty(@Model.AboutProduct.PSSelling) == false ? @Model.AboutProduct.PSSelling.Split(',').ToArray() : new string[0]; }
                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "PSSelling").FirstOrDefault().QuestionText : "" )  </label>
                                        @foreach (var item in ViewBag.ProductServiceSelling)
                                        {
                                            if (Array.Exists(arrayPSSelling, x => x == Convert.ToString(@item.ID)) == true)
                                            {<div class="custom-checkbox">

                                                    <label for="square-radio-disabled"> <i class="mdi mdi-chevron-double-right"></i> @item.Value</label>
                                                </div>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.AboutProduct.PSDescription))
                        {
                            _ProgressAboutProduct = _ProgressAboutProduct + _ProgressAboutProductUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "PSDescription").FirstOrDefault().QuestionText : "" )  </label>

                                        <textarea class='form-control form-control-line detailtextarea' readonly>@Model.AboutProduct.PSDescription</textarea>
                                    </div>
                                </div>

                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.AboutProduct.PSProduce))
                        {
                            _ProgressAboutProduct = _ProgressAboutProduct + _ProgressAboutProductUnit;
                            <div class="row">
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @{ var arrayPSProduce = String.IsNullOrEmpty(@Model.AboutProduct.PSProduce) == false ? @Model.AboutProduct.PSProduce.Split(',').ToArray() : new string[0]; }
                                        <label>What are you selling </label>
                                        @foreach (var item in ViewBag.ProductServiceProduce)
                                        {
                                            if (Array.Exists(arrayPSProduce, x => x == Convert.ToString(@item.ID)) == true)
                                            {<div class="custom-checkbox">
                                                    <label for="square-radio-disabled"><i class="mdi mdi-chevron-double-right"></i> @item.Value</label>

                                                </div>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.AboutProduct.PSDevelopStart))
                        {
                            _ProgressAboutProduct = _ProgressAboutProduct + _ProgressAboutProductUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "PSDevelopStart").FirstOrDefault().QuestionText : "" )  </label>

                                        <textarea class='form-control form-control-line detailtextarea' readonly>@Model.AboutProduct.PSDevelopStart</textarea>
                                    </div>
                                </div>

                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.AboutProduct.PSReadylaunch))
                        {
                            _ProgressAboutProduct = _ProgressAboutProduct + _ProgressAboutProductUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">

                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "PSReadylaunch").FirstOrDefault().QuestionText : "" )  </label>
                                        <textarea class='form-control form-control-line detailtextarea' readonly>@Model.AboutProduct.PSReadylaunch</textarea>
                                    </div>
                                </div>

                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.AboutProduct.PSVariations))
                        {
                            _ProgressAboutProduct = _ProgressAboutProduct + _ProgressAboutProductUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "PSVariations").FirstOrDefault().QuestionText : "" )  </label>

                                        <textarea class='form-control form-control-line detailtextarea' readonly>@Model.AboutProduct.PSVariations</textarea>
                                    </div>
                                </div>

                            </div>
                        }
                        @if (Model.AboutProduct.PSHaveIPAddress != Guid.Empty)
                        {
                            _ProgressAboutProduct = _ProgressAboutProduct + _ProgressAboutProductUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "PSHaveIPAddress").FirstOrDefault().QuestionText : "" )  </label>
                                        @Html.DropDownList("PSHaveIPAddress", new SelectList(ViewBag.Choice, "ID", "Value", Model.AboutProduct.PSHaveIPAddress), "- Please select -", new { @class = "custom-select col-12", @disabled = "disabled" })


                                    </div>
                                </div>

                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.AboutProduct.PSIPAddress) && Model.AboutProduct.PSHaveIPAddress != Guid.Empty)
                        {

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "PSIPAddress").FirstOrDefault().QuestionText : "" )  </label>

                                        <textarea class='form-control form-control-line detailtextarea' readonly>@Model.AboutProduct.PSIPAddress</textarea>
                                    </div>
                                </div>

                            </div>
                        }

                        @if (Model.AboutProduct.PSHaveTradeMark != Guid.Empty)
                        {
                            _ProgressAboutProduct = _ProgressAboutProduct + _ProgressAboutProductUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "PSHaveTradeMark").FirstOrDefault().QuestionText : "" )  </label>
                                        @Html.DropDownList("PSHaveTradeMark", new SelectList(ViewBag.Choice, "ID", "Value", Model.AboutProduct.PSHaveTradeMark), "- Please select -", new { @class = "custom-select col-12", @disabled = "disabled" })


                                    </div>
                                </div>

                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.AboutProduct.PSTradeMark) && Model.AboutProduct.PSHaveTradeMark != Guid.Empty)
                        {

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "PSTradeMark").FirstOrDefault().QuestionText : "" )  </label>

                                        <textarea class='form-control form-control-line detailtextarea' readonly>@Model.AboutProduct.PSTradeMark</textarea>
                                    </div>
                                </div>

                            </div>
                        }
                        @if (Model.AboutProduct.PSHaveTechnologyRoadMap != Guid.Empty)
                        {
                            _ProgressAboutProduct = _ProgressAboutProduct + _ProgressAboutProductUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "PSHaveTechnologyRoadMap").FirstOrDefault().QuestionText : "" )  </label>
                                        @Html.DropDownList("PSHaveTechnologyRoadMap", new SelectList(ViewBag.Choice, "ID", "Value", Model.AboutProduct.PSHaveTechnologyRoadMap), "- Please select -", new { @class = "custom-select col-12", @disabled = "disabled" })


                                    </div>
                                </div>

                            </div>
                        }
                        @if (Model.AboutProduct.PSHaveTechnologyRoadMap != Guid.Empty)
                        {

                            <div class='jsTechnologyRoadMapContainer'>

                                @for (int i = 0; i < ViewBag.VersionList.Count; i++)
                                {
                                    <div class="row jsTechnologyRoadMap">
                                        <div class="col-md-12">
                                            <div class="form-group"> <input type="text" class="form-control jsVersion progress-required" placeholder="Version" value="@ViewBag.VersionList[i]" readonly> </div>
                                        </div>


                                    </div>
                                }
                            </div>
                        }
                    </section>
                    <!-- Step 2 -->
                    <h4 class="text-center bold">MVP</h4>
                    <section>

                        @if (Model.MVP.MVPDevelopmentFarID != null)
                        {
                            _ProgressMVP = _ProgressMVP + _ProgressMVPUnit;


                            <div class="form-group">
                                <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "MVPDevelopmentFarID").FirstOrDefault().QuestionText : "" )  </label>

                                @{ var arrayFinanceOperationalResponsible = String.IsNullOrEmpty(@Model.MVP.MVPDevelopmentFarID) == false ? @Model.MVP.MVPDevelopmentFarID.Split(',').ToArray() : new string[0];
                                }
                                @foreach (var item in ViewBag.DevelopmentFarList)
                                {
                                    if (Array.Exists(arrayFinanceOperationalResponsible, x => x == Convert.ToString(item.ID)) == true)
                                    {<p><i class="mdi mdi-chevron-double-right"></i> @item.Value </p>}
                            }


                            </div>


                        }

                        @if (!string.IsNullOrEmpty(Model.MVP.MVPCreate))
                        {
                            _ProgressMVP = _ProgressMVP + _ProgressMVPUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "MVPCreate").FirstOrDefault().QuestionText : "" )  </label>

                                        <textarea class='form-control form-control-line detailtextarea' readonly>@Model.MVP.MVPCreate</textarea>
                                    </div>
                                </div>

                            </div>
                        }
                        @if (Model.MVP.MVPReasonID != Guid.Empty)
                        {
                            _ProgressMVP = _ProgressMVP + _ProgressMVPUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "MVPReasonID").FirstOrDefault().QuestionText : "" )  </label>


                                        @foreach (var item in ViewBag.MVPReason)
                                        {
                                            if (item.ID == Model.MVP.MVPReasonID)
                                            {
                                                <div class="form-group">
                                                    <label for="wint1">@item.Value </label>
                                                </div>

                                            }
                                        }

                                    </div>
                                </div>

                            </div>
                        }

                    </section>

                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-xlg-2 col-md-4">
        @*<ol class="breadcrumb">
                <li class="breadcrumb-item"><span class="round" title="Total Questions">@Questions</span></li>
                <li class="breadcrumb-item active"><span class="round bg-success" title="Answered"> @Answered</span></li>
                <li class="breadcrumb-item active"><span class="round bg-danger" title="Un-answered">@(Questions - Answered) </span></li>
            </ol>*@
        <div class="stickyside">
            <div class="list-group" id="top-menu">
                @if (ViewBag.RateInfo != null)
                {
                    if (ViewBag.RateInfo.Rating != 0.0m)
                    {
                        <a href="#1" class="list-group-item" style="text-align:center">
                            <div data-label="@(Math.Round(ViewBag.RateInfo.Rating))%" class="css-bar css-bar-@(Math.Round(ViewBag.RateInfo.Rating)) css-bar-lg css-bar-success" style="cursor:pointer"></div>
                        </a>
                    }
                    if (!string.IsNullOrEmpty(ViewBag.RateInfo.Note))
                    {
                        <a href="#1" class="list-group-item">
                            <span class="badge badge-info badge-info">NOTE</span> <br />
                            @ViewBag.RateInfo.Note
                        </a>
                    }
                }

                @{
                    Html.RenderAction("Chat", "Chat");
                }
                <br />

                <a href="#1" class="list-group-item">
                    About the Product
                    <div class="pull-right" style="text-align:right">@(Math.Round(_ProgressAboutProduct))% <i class="fa fa-level-up text-success"></i></div>
                    <div class="progress" style="height:auto">
                        <div class="progress-bar bg-primary" id="IdeaProgress" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width:@(Math.Round(_ProgressAboutProduct))%; height: 6px;"> <span class="sr-only">@(Math.Round(_ProgressAboutProduct))% Complete</span></div>
                    </div>
                </a>
                <a href="#22" class="list-group-item">
                    MVP

                    <div class="pull-left" style="text-align:right">@(Math.Round(_ProgressMVP))% <i class="fa fa-level-up text-success"></i></div>
                    <div class="progress" style="height:auto">
                        <div class="progress-bar bg-info" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width:@(Math.Round(_ProgressMVP))%; height: 6px;"> <span class="sr-only">@(Math.Round(_ProgressMVP))% Complete</span></div>
                    </div>
                </a>



            </div>
        </div>
        <br />
        <div class="stickyside">
            <div class="list-group" id="top-menu">
                <div class="card card-body">
                    <div class="row align-items-center">
                        <p>Supplier List</p>
                        <div class="col-md-12">
                            @foreach (var sup in ViewBag.BusinessSupplier)
                            {


                                <div class="col-md-6">
                                    <a href="~/RecommendDocumentation/Packages/@sup.SupplierID"><img src="@ConfigurationManager.AppSettings["SupplierBaseUrl"]/Content/Images/@(sup.ImageID == null ? "profile-dummy.png" : sup.ImageID)" width="50" alt="user" class="img-fluid"></a>

                                    <address>
                                        @sup.CompanyName
                                    </address>
                                </div>


                            }
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>




