@using System.ComponentModel;
@using System.Configuration;
@model Business_Model.Model.Business

@{
    decimal _ProgressFounder = 0.0m; decimal _ProgressCompanyDetail = 0.0m;
    decimal _ProgressFounderUnit = 16.66m; decimal _ProgressCompanyDetailUnit = 14.28m;
    var LanguageList = ViewBag.Language as IEnumerable<Business_Model.Model.LanguageModule>;
}
<input type="hidden" id="JsModuleID" value="@((int)Business_Model.Model.Module.TheBusiness)" />
<input type="hidden" id="JsModuleSectionID" value="@((int)Business_Model.Model.ModuleSection.TheBusiness_Businessoverview)" />
<div class="row" id="validation">
    <div class="col-lg-9 col-xlg-10 col-md-8">
        <div class="card wizard-content">
            <div class="card-body">
                <div class="row " style="margin: 0 0px 2px;">
                    <div class="col-md-5 align-self-center">
                        <h4 class="card-title" id="1"></h4>
                    </div>
                    <div class="col-md-7 align-self-center text-right">
                        <div class="d-flex justify-content-end align-items-center">
                            <i class="mdi mdi-arrow-left"></i>  @Html.ActionLink("Back to Overview", "Index", "ModuleCourse", new { ControllerName = "Business", ActionName = "BusinessOverview", ModuleID = (int)Business_Model.Model.Module.TheBusiness, SectionID = (int)Business_Model.Model.ModuleSection.TheBusiness_Businessoverview }, new { @class = "" })
                        </div>
                    </div>
                </div>
                <form class="form-material m-t-40">
                    <input type="hidden" id="BusinessOverID" name="BusinessOverID" value="@Model.BusinessOverID" />

                    <!-- Step 1 -->
                    <h4 class="text-center">About the Founder</h4>
                    <section>
                        @if (!string.IsNullOrEmpty(Model.Founder.IdeaComeup))
                        {
                            _ProgressFounder = _ProgressFounder + _ProgressFounderUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "IdeaComeup").FirstOrDefault().QuestionText : "" )  </label>
                                        <textarea class='form-control form-control-line detailtextarea' readonly>@Model.Founder.IdeaComeup</textarea>
                                    </div>
                                </div>

                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.Founder.BusinessRun))
                        {
                            _ProgressFounder = _ProgressFounder + _ProgressFounderUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">

                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "BusinessRun").FirstOrDefault().QuestionText : "" )  </label>
                                        <textarea class='form-control form-control-line detailtextarea' readonly>@Model.Founder.BusinessRun</textarea>
                                    </div>
                                </div>

                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.Founder.PreviousWorkExperience))
                        {
                            _ProgressFounder = _ProgressFounder + _ProgressFounderUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">

                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "PreviousWorkExperience").FirstOrDefault().QuestionText : "" )  </label>
                                        <textarea class='form-control form-control-line detailtextarea' readonly>@Model.Founder.PreviousWorkExperience</textarea>
                                    </div>
                                </div>

                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.Founder.Qualification))
                        {
                            _ProgressFounder = _ProgressFounder + _ProgressFounderUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">

                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "Qualification").FirstOrDefault().QuestionText : "" )  </label>
                                        <textarea class='form-control form-control-line detailtextarea' readonly>@Model.Founder.Qualification</textarea>
                                    </div>
                                </div>

                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.Founder.HobbiesInterest))
                        {
                            _ProgressFounder = _ProgressFounder + _ProgressFounderUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">

                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "HobbiesInterest").FirstOrDefault().QuestionText : "" )  </label>
                                        <textarea class='form-control form-control-line detailtextarea' readonly>@Model.Founder.HobbiesInterest</textarea>
                                    </div>
                                </div>

                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.Founder.WhyYou))
                        {
                            _ProgressFounder = _ProgressFounder + _ProgressFounderUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">

                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "WhyYou").FirstOrDefault().QuestionText : "" )  </label>
                                        <textarea class='form-control form-control-line detailtextarea' readonly>@Model.Founder.WhyYou</textarea>
                                    </div>
                                </div>

                            </div>
                        }
                    </section>
                    <!-- Step 2 -->
                    <h4 class="text-center">Company Detail(s)</h4>
                    <section>

                        @if (Model.CompanyDetails.CompanyLegalStructureID != Guid.Empty)
                        {
                            _ProgressCompanyDetail = _ProgressCompanyDetail + _ProgressCompanyDetailUnit;
                            <div class="row">
                                <div class="col-md-12">

                                    <div class="form-group">

                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "CompanyLegalStructureID").FirstOrDefault().QuestionText : "" )  </label>

                                        @Html.DropDownListFor(n => n.CompanyDetails.CompanyLegalStructureID, new SelectList(ViewBag.CompanyLegalStructure, "ID", "Value", @Model.CompanyDetails.CompanyLegalStructureID), "- Please select -", new { @class = "custom-select col-12 ", @disabled = "disabled" })

                                    </div>

                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.CompanyDetails.CompanyRegisterdName))
                        {
                            _ProgressCompanyDetail = _ProgressCompanyDetail + _ProgressCompanyDetailUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">

                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "CompanyRegisterdName").FirstOrDefault().QuestionText : "" )  </label>
                                        <textarea class='form-control form-control-line detailtextarea' readonly>@Model.CompanyDetails.CompanyRegisterdName</textarea>


                                    </div>
                                </div>

                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.CompanyDetails.Founded))
                        {
                            _ProgressCompanyDetail = _ProgressCompanyDetail + _ProgressCompanyDetailUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">

                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "Founded").FirstOrDefault().QuestionText : "" )  </label>
                                        <textarea class='form-control form-control-line detailtextarea' readonly>@Model.CompanyDetails.Founded</textarea>


                                    </div>
                                </div>

                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.CompanyDetails.BusinessAddress))
                        {
                            _ProgressCompanyDetail = _ProgressCompanyDetail + _ProgressCompanyDetailUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">

                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "BusinessAddress").FirstOrDefault().QuestionText : "" )  </label>
                                        <textarea class='form-control form-control-line detailtextarea' readonly>@Model.CompanyDetails.BusinessAddress</textarea>
                                    </div>
                                </div>

                            </div>
                        }
                        @if (Model.CompanyDetails.BusinessRequirePremises != Guid.Empty)
                        {
                            _ProgressCompanyDetail = _ProgressCompanyDetail + _ProgressCompanyDetailUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">

                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "BusinessRequirePremises").FirstOrDefault().QuestionText : "" )  </label>
                                        @Html.DropDownListFor(n => n.CompanyDetails.BusinessRequirePremises, new SelectList(ViewBag.Choice, "ID", "Value", @Model.CompanyDetails.BusinessRequirePremises), "- Please select -", new { @class = "custom-select col-12", @disabled = "disabled" })



                                    </div>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.CompanyDetails.LandlordCostStatus) && Model.CompanyDetails.BusinessRequirePremises != Guid.Empty)
                        {

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <div class='form-group jsLandlordType LandlordType @(string.IsNullOrEmpty(@Model.CompanyDetails.LandlordCostStatus) ? "hide" : "")'>
                                            <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "LandlordCostStatus").FirstOrDefault().QuestionText : "" )  </label>
                                            <textarea class='form-control ideatextarea' id="LandlordCostStatus" name="LandlordCostStatus">@Model.CompanyDetails.LandlordCostStatus</textarea>



                                        </div>
                                    </div>

                                </div>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.CompanyDetails.CompanyNumber))
                        {
                            _ProgressCompanyDetail = _ProgressCompanyDetail + _ProgressCompanyDetailUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">

                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "CompanyNumber").FirstOrDefault().QuestionText : "" )  </label>
                                        <textarea class='form-control form-control-line detailtextarea' readonly>@Model.CompanyDetails.CompanyNumber</textarea>


                                    </div>
                                </div>

                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.CompanyDetails.VatNumber))
                        {
                            _ProgressCompanyDetail = _ProgressCompanyDetail + _ProgressCompanyDetailUnit;
                            <div class="col-md-12">
                                <div class="form-group">

                                    <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "VatNumber").FirstOrDefault().QuestionText : "" )  </label>
                                    <textarea class='form-control form-control-line detailtextarea' readonly>@Model.CompanyDetails.VatNumber</textarea>


                                </div>
                            </div>


                        }



                    </section>



                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-xlg-2 col-md-4">


        <div class="stickyside">

            <div class="list-group" id="top-menu">
                @if (ViewBag.RateInfo != null)
                {
                    if (ViewBag.RateInfo.Rating != 0.0m)
                    {
                        <a href="#1" class="list-group-item" style="text-align:center">
                            <div data-label="@(Math.Round(ViewBag.RateInfo.Rating))%" class="css-bar css-bar-@(Math.Round(ViewBag.RateInfo.Rating)) css-bar-lg css-bar-success" style="cursor:pointer"></div>
                        </a>
                    }
                    if (!string.IsNullOrEmpty(ViewBag.RateInfo.Note))
                    {
                        <a href="#1" class="list-group-item">
                            <span class="badge badge-info badge-info">NOTE</span> <br />
                            @ViewBag.RateInfo.Note
                        </a>
                    }
                }

                @{
                    Html.RenderAction("Chat", "Chat");
                }
                <br />
                <a href="#1" class="list-group-item">
                    About the Founder
                    <div class="pull-right" style="text-align:right">@(Math.Round(_ProgressFounder))% <i class="fa fa-level-up text-success"></i></div>
                    <div class="progress" style="height:auto">
                        <div class="progress-bar bg-primary" id="IdeaProgress" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width:@(Math.Round(_ProgressFounder))%; height: 6px;"> <span class="sr-only">@(Math.Round(_ProgressFounder))% Complete</span></div>
                    </div>
                </a>
                <a href="#22" class="list-group-item">
                    Company Detail(s)

                    <div class="pull-left" style="text-align:right">@(Math.Round(_ProgressCompanyDetail))% <i class="fa fa-level-up text-success"></i></div>
                    <div class="progress" style="height:auto">
                        <div class="progress-bar bg-info" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width:@(Math.Round(_ProgressCompanyDetail))%; height: 6px;"> <span class="sr-only">@(Math.Round(_ProgressCompanyDetail))% Complete</span></div>
                    </div>
                </a>



            </div>
        </div>
        <br />
        <div class="stickyside">
            <div class="list-group" id="top-menu">
                <div class="card card-body">
                    <div class="row align-items-center">
                        <p>Supplier List</p>
                        <div class="col-md-12">
                            @foreach (var sup in ViewBag.BusinessSupplier)
                            {


                                <div class="col-md-6">
                                    <a href="~/RecommendDocumentation/Packages/@sup.SupplierID"><img src="@ConfigurationManager.AppSettings["SupplierBaseUrl"]/Content/Images/@(sup.ImageID == null ? "profile-dummy.png" : sup.ImageID)" width="50" alt="user" class="img-fluid"></a>

                                    <address>
                                        @sup.CompanyName
                                    </address>
                                </div>


                            }
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>



