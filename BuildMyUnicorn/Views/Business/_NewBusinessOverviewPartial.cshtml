                    <h6>About the Founder</h6>
                    <section>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "IdeaComeup").FirstOrDefault().QuestionText : "" )  </label>
                                    <textarea class='form-control ideatextarea' id="IdeaComeup" name="IdeaComeup" oninput="auto_grow_idea_textarea(this)" placeholder="@(LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "IdeaComeup").FirstOrDefault().PlaceHolderText : "" )">@Model.Founder.IdeaComeup</textarea>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">

                                    <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "BusinessRun").FirstOrDefault().QuestionText : "" )  </label>
                                    <textarea class='form-control ideatextarea' id="BusinessRun" name="BusinessRun" oninput="auto_grow_idea_textarea(this)" placeholder="@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "BusinessRun").FirstOrDefault().PlaceHolderText : "" )">@Model.Founder.BusinessRun</textarea>
                                </div>
                            </div>

                        </div>
