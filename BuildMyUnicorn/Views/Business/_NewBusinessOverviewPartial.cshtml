                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">

                                    <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "VatNumber").FirstOrDefault().QuestionText : "" )  </label>
                                    <input type="text" class='form-control' id="VatNumber" name="VatNumber" value="@Model.CompanyDetails.VatNumber" placeholder="@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "VatNumber").FirstOrDefault().PlaceHolderText : "" )" />

