@using System.Configuration;
@using System.ComponentModel;
@model Business_Model.Model.KeyFinding

@{
    decimal _ProgressMarketResearchResult = 0.0m; decimal _ProgressMarketResearchResultUnit = 12.50m;
    var LanguageList = ViewBag.Language as IEnumerable<Business_Model.Model.LanguageModule>;
}

<div class="row" id="validation">
    <div class="col-lg-9 col-xlg-10 col-md-8">
        <div class="card wizard-content">
            <div class="card-body">
                <div class="row " style="margin: 0 0px 2px;">
                    <div class="col-md-5 align-self-center">
                        <h4 class="card-title" id="1"></h4>
                    </div>
                    <div class="col-md-7 align-self-center text-right">
                        <div class="d-flex justify-content-end align-items-center">
                            <i class="mdi mdi-arrow-left"></i>  @Html.ActionLink("Back to Overview", "Index", "ModuleCourse", new { ControllerName = "MarketResearch", ActionName = "KeyFinding", ModuleID = (int)Business_Model.Model.Module.MarketResearch, SectionID = (int)Business_Model.Model.ModuleSection.MarketResearch_KeyFindings }, new { @class = "" })
                        </div>
                    </div>
                </div>
                <form class="form-material m-t-40">

                    <input type="hidden" id="jsonModel" value='@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model))' />
                    <input type="hidden" id="ClientID" name="ClientID" value="@Model.ClientID" />
                    <input type="hidden" id="EntityState" name="EntityState" value="@Model.EntityState" />
                    <input type="hidden" id="KeyFindingID" name="KeyFindingID" value="@Model.KeyFindingID" />
                    <!-- Step 1 -->
                    <h6>Market Research Results </h6>
                    <section>

                        @if (!string.IsNullOrEmpty(Model.MarketResearchResults.InterviewKeyFinding))
                        {
                            _ProgressMarketResearchResult = _ProgressMarketResearchResult + _ProgressMarketResearchResultUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "InterviewKeyFinding").FirstOrDefault().QuestionText : "" ) </label>
                                        <textarea class='form-control form-control-line ideatextarea' id="InterviewKeyFinding" name="InterviewKeyFinding" readonly>@Model.MarketResearchResults.InterviewKeyFinding</textarea>

                                    </div>
                                </div>

                            </div>
                        }
                        @if (Model.MarketResearchResults.InterviewKeyFindingConfident != Guid.Empty)
                        {
                            _ProgressMarketResearchResult = _ProgressMarketResearchResult + _ProgressMarketResearchResultUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "InterviewKeyFindingConfident").FirstOrDefault().QuestionText : "" ) </label>
                                    @foreach (var item in ViewBag.InterviewKeyFinding)
                                    {
                                        if (item.ID == Model.MarketResearchResults.InterviewKeyFindingConfident)
                                        {<textarea class='form-control form-control-line ideatextarea'> @item.Value </textarea>}
                                    }



                                </div>

                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.MarketResearchResults.ObservationKeyFinding))
                        {
                            _ProgressMarketResearchResult = _ProgressMarketResearchResult + _ProgressMarketResearchResultUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "ObservationKeyFinding").FirstOrDefault().QuestionText : "" ) </label>
                                        <textarea class='form-control form-control-line ideatextarea' id="ObservationKeyFinding" name="ObservationKeyFinding" readonly>@Model.MarketResearchResults.ObservationKeyFinding</textarea>

                                    </div>
                                </div>

                            </div>
                        }
                        @if (Model.MarketResearchResults.ObservationKeyFindingConfident != Guid.Empty)
                        {
                            _ProgressMarketResearchResult = _ProgressMarketResearchResult + _ProgressMarketResearchResultUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "ObservationKeyFindingConfident").FirstOrDefault().QuestionText : "" ) </label>
                                    @foreach (var item in ViewBag.ObservationKeyFinding)
                                    {
                                        if (item.ID == Model.MarketResearchResults.ObservationKeyFindingConfident)
                                        {<textarea class='form-control form-control-line ideatextarea'> @item.Value </textarea>}
                                    }


                                </div>

                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.MarketResearchResults.SurveyKeyFinding))
                        {
                            _ProgressMarketResearchResult = _ProgressMarketResearchResult + _ProgressMarketResearchResultUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "SurveyKeyFinding").FirstOrDefault().QuestionText : "" ) </label>
                                        <textarea class='form-control form-control-line ideatextarea' id="SurveyKeyFinding" name="SurveyKeyFinding" readonly>@Model.MarketResearchResults.SurveyKeyFinding</textarea>

                                    </div>
                                </div>

                            </div>
                        }
                        @if (Model.MarketResearchResults.SurveyKeyFindingConfident != Guid.Empty)
                        {
                            _ProgressMarketResearchResult = _ProgressMarketResearchResult + _ProgressMarketResearchResultUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "SurveyKeyFindingConfident").FirstOrDefault().QuestionText : "" ) </label>

                                    @foreach (var item in ViewBag.SurveyKeyFinding)
                                    {
                                        if (item.ID == Model.MarketResearchResults.SurveyKeyFindingConfident)
                                        {<textarea class='form-control form-control-line ideatextarea'> @item.Value </textarea>}
                                    }

                                </div>

                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.MarketResearchResults.OnlineResearchKeyFinding))
                        {
                            _ProgressMarketResearchResult = _ProgressMarketResearchResult + _ProgressMarketResearchResultUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "OnlineResearchKeyFinding").FirstOrDefault().QuestionText : "" ) </label>
                                        <textarea class='form-control form-control-line ideatextarea' id="OnlineResearchKeyFinding" name="OnlineResearchKeyFinding" readonly>@Model.MarketResearchResults.OnlineResearchKeyFinding</textarea>

                                    </div>
                                </div>

                            </div>
                        }
                        @if (Model.MarketResearchResults.OnlineResearchKeyFindingConfident != Guid.Empty)
                        {
                            _ProgressMarketResearchResult = _ProgressMarketResearchResult + _ProgressMarketResearchResultUnit;

                            <div class="row">
                                <div class="col-md-12">
                                    <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "OnlineResearchKeyFindingConfident").FirstOrDefault().QuestionText : "" ) </label>

                                    @foreach (var item in ViewBag.OnlineResearchKeyFinding)
                                    {
                                        if (item.ID == Model.MarketResearchResults.OnlineResearchKeyFindingConfident)
                                        {<textarea class='form-control form-control-line ideatextarea'> @item.Value </textarea>}
                                    }

                                </div>

                            </div>

                        }

                    </section>


                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-xlg-2 col-md-4">
        <!-- <div class="d-flex justify-content-end align-items-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><span class="round" title="Total Questions">0</span></li>
                <li class="breadcrumb-item active"><span class="round bg-success" title="Answered">10</span></li>
                <li class="breadcrumb-item active"><span class="round bg-danger" title="Un-answered">0</span></li>
            </ol>
        </div>-->

        <div class="stickyside">
            <div class="list-group" id="top-menu">
                @if (ViewBag.RateInfo != null)
                {
                    if (ViewBag.RateInfo.Rating != 0.0m)
                    {
                        <a href="#1" class="list-group-item" style="text-align:center">
                            <div data-label="@(Math.Round(ViewBag.RateInfo.Rating))%" class="css-bar css-bar-@(Math.Round(ViewBag.RateInfo.Rating)) css-bar-lg css-bar-success" style="cursor:pointer"></div>
                        </a>
                    }
                    if (!string.IsNullOrEmpty(ViewBag.RateInfo.Note))
                    {
                        <a href="#1" class="list-group-item">
                            <span class="badge badge-info badge-info">NOTE</span> <br />
                            @ViewBag.RateInfo.Note
                        </a>
                    }
                }
                <a href="#1" class="list-group-item">
                    Market Research Results
                    <div class="pull-right" style="text-align:right">@(Math.Round(_ProgressMarketResearchResult))% <i class="fa fa-level-up text-success"></i></div>
                    <div class="progress" style="height:auto">
                        <div class="progress-bar bg-primary" id="IdeaProgress" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width:@(Math.Round(_ProgressMarketResearchResult))%; height: 6px;"> <span class="sr-only">@(Math.Round(_ProgressMarketResearchResult))% Complete</span></div>
                    </div>
                </a>


            </div>
        </div>
        <br />
        <div class="stickyside">
            <div class="list-group" id="top-menu">
                <div class="card card-body">
                    <div class="row align-items-center">
                        <p>Supplier List</p>
                        <div class="col-md-12">
                            @foreach (var sup in ViewBag.BusinessSupplier)
                            {


                                <div class="col-md-6">
                                    <a href="~/RecommendDocumentation/Packages/@sup.SupplierID"><img src="@ConfigurationManager.AppSettings["SupplierBaseUrl"]/Content/Images/@(sup.ImageID == null ? "profile-dummy.png" : sup.ImageID)" width="50" alt="user" class="img-fluid"></a>

                                    <address>
                                        @sup.CompanyName
                                    </address>
                                </div>


                            }
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <br />
        <div class="stickyside">
            <div class="list-group" id="top-menu">
                <div class="card card-body">
                    <div class="row align-items-center">
                        <p>Supplier List</p>
                        <div class="col-md-12">
                            @foreach (var sup in ViewBag.BusinessSupplier)
                            {


                                <div class="col-md-6">
                                    <a href="~/RecommendDocumentation/Packages/@sup.SupplierID"><img src="@ConfigurationManager.AppSettings["SupplierBaseUrl"]/Content/Images/@(sup.ImageID == null ? "profile-dummy.png" : sup.ImageID)" width="50" alt="user" class="img-fluid"></a>

                                    <address>
                                        @sup.CompanyName
                                    </address>
                                </div>


                            }
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>








