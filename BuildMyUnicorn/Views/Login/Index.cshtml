
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="../assets/images/favicon.png">
    <title>Build My Unicorn  - Login </title>

    <!-- page css -->
    <link href="~/dist/css/pages/login-register-lock.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/dist/css/style.min.css" rel="stylesheet">
    <link href="~/dist/css/custom-style.css" rel="stylesheet" />
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-ZE6PHRSF0V"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'G-ZE6PHRSF0V');</script>
    <style>
        input:-webkit-autofill,
        input:-webkit-autofill:hover,
        input:-webkit-autofill:focus,
        input:-webkit-autofill:active {
            -webkit-box-shadow: 0 0 0 30px #353b47 inset !important;
        }
        /*Change text in autofill textbox*/
        input:-webkit-autofill {
            -webkit-text-fill-color: #fff !important;
        }
    </style>
    <style>

        .btn-info {
            color: #fff;
            /* background-color: #03a9f3; */
            border-color: #8758ff;
            background: linear-gradient( -120deg, #8758ff 0%, rgb(97,78,249) 100%);
        }


        .text-primary {
            /* color: #fb9678!important; */
            color: #8758ff !important;
        }
        @@media screen and (min-width: 0px) and (max-width: 1024px) {
            .login-community {
                display: none;
            }  /* show it on small screens */
}

    </style>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>
    <!-- ============================================================== -->
    <!-- Preloader - style you can find in spinners.css -->
    <!-- ============================================================== -->
    <div class="preloader">
        <div class="loader">
            <div class="loader__figure"></div>
            <p class="loader__label">Build My Unicorn</p>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- Main wrapper - style you can find in pages.scss -->
    <!-- ============================================================== -->
    <section id="wrapper" class="login-register login-sidebar" style="background-image: url(https://platform.buildmyunicorn.com/assets/images/background/login-register.jpg);">
        <div class="login-box card login-community" style="left: 0;right:50%; width:80%;background:none; text-align:left;  margin: 0px auto; ">
            <div class="card-body">
                <table width="100%;" height="100%">
                    <tr>
                        <td style="height: 100%; width:100%; text-align: center;color:#000; vertical-align: middle; text-transform:uppercase ">
                            <span>

                                <!--End Logo icon -->
                                <!-- Logo text --><span style="font-size: 30px; color: #000; font-weight: 700;">
                                    Announcing
                                    <span style="color: #8758ff"> Unicorn</span> Community <br />
                                    <span></span><span style="font-weight: 300; font-size:20px">
                                        Join, Interact, and Learn with
                                        other  users.
                                        <br /><br />
                                        <button class="btn btn-info btn-md text-uppercase btn-rounded" type="submit">Join Community</button>
                                    </span>
                                </span>
                            </span>
                        </td>
                    </tr>
                </table>

            </div>
        </div>

        <div class="login-box card">
            <div class="card-body">
                <form class="form-horizontal form-material text-center" id="loginform">
                    <a class="navbar-brand" href="javascript:void(0)">
                        <!-- Logo icon --><b>
                            <!--You can put here icon as well // <i class="wi wi-sunset"></i> //-->
                            <!-- Light Logo icon -->
                            <img src="~/Content/images/logo-lite.png" alt="homepage" class="light-logo" />
                        </b>
                        <!--End Logo icon -->
                        <!-- Logo text --><span>

                            <!--End Logo icon -->
                            <!-- Logo text --><span style="font-size: 22px; color:#fff">
                                <span>BUILDMY</span><span style="font-weight: 700;">UNICORN</span>
                            </span>
                        </span>
                    </a>
                    <div>
                        <br />
                        <br />
                        <span style="font-size: 14px; color:#fff">
                            <span></span><span style="font-weight: 300;">Sign In to Your Account</span>
                        </span>


                    </div>
                    <div class="form-group m-t-40">
                        <div class="col-xs-12">
                            <input type="email" class="form-control" name="Email" placeholder="Username" data-parsley-required="true" data-parsley-required-message="Please enter email" data-parsley-type-message="Please enter valid email" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <input type="password" class="form-control" name="Password" placeholder="Password" data-parsley-required="true" data-parsley-required-message="Please enter password" autocomplete="off" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <div class="d-flex no-block align-items-center">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="customCheck1">
                                    <label class="custom-control-label" for="customCheck1">Remember me</label>
                                </div>
                                <div class="ml-auto">
                                    <a href="javascript:void(0)" id="to-recover" class="text-muted"><i class="fas fa-lock m-r-5"></i> Forgot pwd?</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">


                            <button class="btn btn-info btn-lg btn-block text-uppercase btn-rounded" type="submit">Log In</button>
                            @*<button class="btn btn-info btn-lg btn-block  btn-rounded" type="submit"> Please wait ...</button>*@
                        </div>
                    </div>
                    <div class="alert alert-danger hide alert-rounded">
                        <span id="responseMessage"></span>
                        <button type="button" class="close" onclick="$('.alert').hide()"> <span aria-hidden="true">&times;</span> </button>
                    </div>
                    <div class="form-group m-b-0">
                        <div class="col-sm-12 text-center">
                            Don't have an account? <a href="~/Register" class="text-primary m-l-5"><b>Register</b></a>
                        </div>
                    </div>
                </form>
                <form class="form-horizontal jsfrmForgotPassword" id="recoverform" method="post">
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <h3>Recover Password</h3>
                            <p class="text-muted">Enter your Email and instructions will be sent to you! </p>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input class="form-control" type="text" name="Email" required="" placeholder="Email">
                        </div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <button class="btn btn-primary btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Reset</button>
                        </div>
                    </div>

                    <div class="alert alert-danger alert-rounded hide jsResetPasswordMsg">
                        <span id="responseMessage"></span>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">&times;</span> </button>
                    </div>
                    <div class="form-group m-b-0">
                        <div class="col-sm-12 text-center">
                            <p>Go to login: <a href="/Login" class="text-info m-l-5"><b>Sign In</b></a></p>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </section>
    <!-- ============================================================== -->
    <!-- End Wrapper -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- All Jquery -->
    <!-- ============================================================== -->
    <script src="~/assets/node_modules/jquery/jquery-3.2.1.min.js"></script>
    <script src="https://code.jquery.com/jquery-migrate-1.4.1.min.js"></script>
    <!-- Bootstrap tether Core JavaScript -->
    <script src="~/assets/node_modules/popper/popper.min.js"></script>
    <script src="~/assets/node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/Content/app_script/parsley.js"></script>
    <script src="@Url.ContentVersioned("~/page_script/login.js")"></script>
    <!--Custom JavaScript -->
    <script type="text/javascript">
        $(function () {
            $(".preloader").fadeOut();
        });
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        });
        // ==============================================================
        // Login and Recover Password
        // ==============================================================
        $('#to-recover').on("click", function () {
            $("#loginform").slideUp();
            $("#recoverform").fadeIn();
        });
    </script>

</body>

</html>