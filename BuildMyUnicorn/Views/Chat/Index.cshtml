                            @{ int count = 1;}
                            @foreach (var item in ViewBag.CustomerTeamList)
                            {
                                if (item.ClientID != ViewBag.Client.ClientID)
                                {
                                    if (count == 1)
                                    {

                                        <li>
                                            <input type="hidden" id="SenderName" value="@ViewBag.Client.FirstName @ViewBag.Client.LastName" />
                                            <input type="hidden" id="ReceiverName" value="@item.FirstName @item.LastName" />
                                            <input type="hidden" id="ChatSenderID" value="@ViewBag.Client.ClientID" />
                                            <input type="hidden" id="ChatReceiverID" value="@item.ClientID" />
                                            <input type="hidden" id="MessageText" />
                                            <input type="hidden" id="TopicID" />
                                            <a href="javascript:void(0)" class="active jsActiveClient @item.ClientID" data-startupname="@item.FirstName @item.LastName" data-clientid="@item.ClientID">
                                                <img src="@ConfigurationManager.AppSettings["ClientBaseUrl"]/Content/Images/@(item.ImageID == null ? "profile-dummy.png" : item.ImageID)" alt="user-img" class="img-circle"> <span>@item.FirstName @item.LastName <small class="text-warning">Away</small></span>
                                            </a>

                                        </li>
                                        count = count + 1;
                                    }
                                    else
                                    {
                                        <li>

                                            <a href="javascript:void(0)" class="jsActiveClient @item.ClientID" data-startupname="@item.FirstName @item.LastName" data-clientid="@item.ClientID">
                                                <img src="@ConfigurationManager.AppSettings["ClientBaseUrl"]/Content/Images/@(item.ImageID == null ? "profile-dummy.png" : item.ImageID)" alt="user-img" class="img-circle"> <span>@item.FirstName @item.LastName <small class="text-warning">Away</small></span>
                                            </a>

                                        </li>
                                    }
                                }
                            }
                            @if (ViewBag.CustomerAccelerator != null)
                            {
                                <li>

                                    <a href="javascript:void(0)" class="jsActiveClient" data-startupname="@ViewBag.CustomerAccelerator.CompanyName" data-clientid="@ViewBag.CustomerAccelerator.StartupAcceleratorID">
