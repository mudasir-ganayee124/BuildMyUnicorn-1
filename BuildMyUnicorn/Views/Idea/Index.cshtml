<div class="row page-titles" data-entitystate="@Model">
    <div class="col-md-5 align-self-center">
        <h4 class="text-themecolor">My Idea </h4>

    </div>

    <div class="col-md-7 align-self-center text-right">
        <div class="d-flex justify-content-end align-items-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                <li class="breadcrumb-item active">Get the idea out of my head </li>
            </ol>

            @if (Model == (int)EntityState.Old)
            {
                @*<button type="button" class="btn btn-info d-none d-lg-block m-l-15 JsDownloadIdea"> <i class="fas fa-file-pdf"></i> Download</button>*@
                <button type="button" class="btn btn-primary d-none d-lg-block m-l-15 JsUpdateIdea ">Update</button>

            }
            else
            {

                <input type="hidden" id="jsonModuleVideo" value='@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.Video))' />
                <div id="DialogModuleVideo">
                    <iframe id="ModuleVideo" width="100%" height="100%" src="@(ViewBag.Video != null ?  ViewBag.Video.VideoUrl : "")" auto frameborder="0" allowfullscreen></iframe>
                </div>

            }


        </div>
    </div>
</div>


@{
    if (Model == (int)EntityState.New) { Html.RenderAction("New", "Idea"); }
    else { Html.RenderAction("Detail", "Idea"); }
}


@section PageScript
{
    <!-- This Page JS -->
