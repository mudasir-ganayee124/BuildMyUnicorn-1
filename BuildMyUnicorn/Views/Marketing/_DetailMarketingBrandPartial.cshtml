
@using System.Configuration;
@model Business_Model.Model.MarketingBrand
@{
    var LanguageList = ViewBag.Language as IEnumerable<Business_Model.Model.LanguageModule>;
    decimal _ProgressBrandStrategy = 0.0m; decimal _ProgressBrandtouchpoint = 0.0m;
    decimal _ProgressBrandStrategyUnit = 11.11m; decimal _ProgressBrandtouchpointUnit = 33.33m;
    var arrayBrandTouchPoint = String.IsNullOrEmpty(Model.BrandTouchPoints.BrandTouchPointID) == false ? Model.BrandTouchPoints.BrandTouchPointID.Split(',').ToArray() : new string[0];
}

<input type="hidden" id="JsModuleID" value="@((int)Business_Model.Model.Module.Marketing)" />
<input type="hidden" id="JsModuleSectionID" value="@((int)Business_Model.Model.ModuleSection.Marketing_Brand)" />
<div class="row">
    <div class="col-lg-9 col-xlg-10 col-md-8">
        <div class="card">
            <div class="card-body wizard-content">
                <div class="row " style="margin: 0 0px 2px;">
                    <div class="col-md-5 align-self-center">
                        <div id="markupContainer"> </div>
                    </div>
                    <div class="col-md-7 align-self-center text-right">
                        <div class="d-flex justify-content-end align-items-center">
                            <i class="mdi mdi-arrow-left"></i>  @Html.ActionLink("Back to Overview", "Index", "ModuleCourse", new { ControllerName = "Marketing", ActionName = "Brand", MOduleID = (int)Business_Model.Model.Module.Marketing, SectionID = (int)Business_Model.Model.ModuleSection.Marketing_Brand }, new { @class = "" })
                        </div>
                    </div>

                </div>
                <form class="form-material m-t-40">
                    <input type="hidden" id="jsonModel" value='@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model))' />
                    <input type="hidden" id="MarketingBrandID" name="MarketingBrandID" value="@Model.MarketingBrandID" />
                    <input type="hidden" id="ActionType" value="@ViewBag.ActionType" />
                    <input type="hidden" id="ClientID" name="ClientID" value="@Model.ClientID" />
                    <!-- Step 1 -->
                    <h3 class="text-center">
                        Branding Strategy
                    </h3>
                    <section>
                        @if (!string.IsNullOrEmpty(Model.BrandingStrategy.WhatAreWe))
                        {
                            _ProgressBrandStrategy += _ProgressBrandStrategyUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "WhatAreWe").FirstOrDefault().QuestionText : "" )  </label>


                                        <textarea class='form-control form-control-line ideatextarea' id="WhatAreWe" name="WhatAreWe" readonly>@Model.BrandingStrategy.WhatAreWe</textarea>
                                    </div>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.BrandingStrategy.WhyWeHere))
                        {
                            _ProgressBrandStrategy += _ProgressBrandStrategyUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "WhyWeHere").FirstOrDefault().QuestionText : "" )  </label>

                                        <textarea class='form-control form-control-line ideatextarea' id="WhyWeHere" name="WhyWeHere" readonly>@Model.BrandingStrategy.WhyWeHere</textarea>
                                    </div>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.BrandingStrategy.WhatDoHowDo))
                        {
                            _ProgressBrandStrategy += _ProgressBrandStrategyUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "WhatDoHowDo").FirstOrDefault().QuestionText : "" )  </label>


                                        <textarea class='form-control form-control-line ideatextarea' id="WhatDoHowDo" name="WhatDoHowDo" readonly>@Model.BrandingStrategy.WhatDoHowDo</textarea>
                                    </div>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.BrandingStrategy.WhatMakesDifferent))
                        {
                            _ProgressBrandStrategy += _ProgressBrandStrategyUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "WhatMakesDifferent").FirstOrDefault().QuestionText : "" )  </label>


                                        <textarea class='form-control form-control-line ideatextarea' id="WhatMakesDifferent" name="WhatMakesDifferent" readonly>@Model.BrandingStrategy.WhatMakesDifferent</textarea>
                                    </div>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.BrandingStrategy.WhoWeHereFor))
                        {
                            _ProgressBrandStrategy += _ProgressBrandStrategyUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "WhoWeHereFor").FirstOrDefault().QuestionText : "" )  </label>


                                        <textarea class='form-control form-control-line ideatextarea' id="WhoWeHereFor" name="WhoWeHereFor" readonly>@Model.BrandingStrategy.WhoWeHereFor</textarea>
                                    </div>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.BrandingStrategy.WhatValueMost))
                        {
                            _ProgressBrandStrategy += _ProgressBrandStrategyUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">

                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "WhatValueMost").FirstOrDefault().QuestionText : "" )  </label>

                                        <textarea class='form-control form-control-line ideatextarea' id="WhatValueMost" name="WhatValueMost" readonly>@Model.BrandingStrategy.WhatValueMost</textarea>
                                    </div>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.BrandingStrategy.OurPersonality))
                        {
                            _ProgressBrandStrategy += _ProgressBrandStrategyUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "OurPersonality").FirstOrDefault().QuestionText : "" )  </label>


                                        <textarea class='form-control form-control-line ideatextarea' id="OurPersonality" name="OurPersonality" readonly>@Model.BrandingStrategy.OurPersonality</textarea>
                                    </div>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.BrandingStrategy.OurAmbition))
                        {
                            _ProgressBrandStrategy += _ProgressBrandStrategyUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">

                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "OurAmbition").FirstOrDefault().QuestionText : "" )  </label>

                                        <textarea class='form-control form-control-line ideatextarea' id="OurAmbition" name="OurAmbition" readonly>@Model.BrandingStrategy.OurAmbition</textarea>
                                    </div>
                                </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.BrandingStrategy.EmotionalSellingPoint))
                        {
                            _ProgressBrandStrategy += _ProgressBrandStrategyUnit;
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">

                                        <label for="wint1">@( LanguageList.Count() > 0 ? LanguageList.Where(x => x.PropertyName == "EmotionalSellingPoint").FirstOrDefault().QuestionText : "" )  </label>

                                        <textarea class='form-control form-control-line ideatextarea' id="EmotionalSellingPoint" name="EmotionalSellingPoint" readonly>@Model.BrandingStrategy.EmotionalSellingPoint</textarea>
                                    </div>
                                </div>
                            </div>
                        }
                    </section>
                    <!-- Step 2 -->
                    <h3 class="text-center">
                        Brand  Guidelines
                    </h3>
                    <section>
                        <div class="row">
                            <input type="hidden" id="PowerPresentationID" name="PowerPresentationID" value="@Model.BrandGuidelines.PowerPresentationID" />
                            <input type="hidden" id="TemplateDownloaded" name="TemplateDownloaded" value="@Model.BrandGuidelines.TemplateDownloaded" />
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="wint1">Powerpoint Presentation</label>
                                    <iframe src='https://view.officeapps.live.com/op/embed.aspx?src=http://platform.buildmyunicorn.com/Content/B39E91B2-DA11-41D0-A20A-F4A097C495B0.pptx' width='100%' height='600px' frameborder='0'></iframe>
                                    @*<div id="slide-resolte-contaniner"></div>*@
                                </div>
                            </div>
                        </div>



                    </section>
                    <!-- Step 3 -->
                    <h3 class="text-center">
                        Brand Touchpoints
                    </h3>
                    <section>
                        <div class="row">
                            <input type="hidden" id="BrandTouchPointID" name="BrandTouchPointID" value="@Model.BrandTouchPoints.BrandTouchPointID" />


                            @{ int Count = Enumerable.Count(ViewBag.BrandTouchPointList);
                                int xy = 0;

                            }
                            @foreach (var item in ViewBag.BrandTouchPointList)
                            {
                                if (xy <= Count)
                                {
                                    if (Array.Exists(arrayBrandTouchPoint, z => z == Convert.ToString(item.ID)))
                                    {
                                        _ProgressBrandtouchpoint = 100;
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                @*<label for="wint1"><i class="mdi mdi-check-circle-outline"></i> @ViewBag.TitleBrandingStrategy["EmotionalSellingPoint"]</label>*@
                                                <i class="mdi mdi-check-circle-outline"></i> <div class='form-control form-control-line ideatextarea' id="EmotionalSellingPoint" name="EmotionalSellingPoint" readonly>@item.Value</div>
                                            </div>
                                        </div>
                                    }


                                }
                                xy = xy + 1;
                            }

                        </div>








                    </section>

                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-xlg-2 col-md-4">

        <div class="stickyside">
            <div class="list-group" id="top-menu">
                @if (ViewBag.RateInfo != null)
                {
                    if (ViewBag.RateInfo.Rating != 0.0m)
                    {
                        <a href="#1" class="list-group-item" style="text-align:center">
                            <div data-label="@(Math.Round(ViewBag.RateInfo.Rating))%" class="css-bar css-bar-@(Math.Round(ViewBag.RateInfo.Rating)) css-bar-lg css-bar-success" style="cursor:pointer"></div>
                        </a>
                    }
                    if (!string.IsNullOrEmpty(ViewBag.RateInfo.Note))
                    {
                        <a href="#1" class="list-group-item">
                            <span class="badge badge-info badge-info">NOTE</span> <br />
                            @ViewBag.RateInfo.Note
                        </a>
                    }
                }

                @{
                    Html.RenderAction("Chat", "Chat");
                }
                <br />

                <a href="#1" class="list-group-item">
                    Branding Strategy
                    <div class="pull-right" style="text-align:right">@(Math.Round(_ProgressBrandStrategy))% <i class="fa fa-level-up text-success"></i></div>
                    <div class="progress" style="height:auto">
                        <div class="progress-bar bg-primary" id="IdeaProgress" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width:@(Math.Round(_ProgressBrandStrategy))%; height: 6px;"> <span class="sr-only">@(Math.Round(_ProgressBrandStrategy))% Complete</span></div>
                    </div>
                </a>
                @*<a href="#22" class="list-group-item">
                        Brand Touchpoints

                        <div class="pull-left" style="text-align:right">@Model.BrandTouchPoints.Completed% <i class="fa fa-level-up text-success"></i></div>
                        <div class="progress" style="height:auto">
                            <div class="progress-bar bg-info" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width:@Model.BrandTouchPoints.Completed%; height: 6px;"> <span class="sr-only">@Model.BrandTouchPoints.Completed% Complete</span></div>
                        </div>
                    </a>*@
                <a href="#22" class="list-group-item">
                    Brand Guidelines

                    <div class="pull-left" style="text-align:right">@(_ProgressBrandtouchpoint)% <i class="fa fa-level-up text-success"></i></div>
                    <div class="progress" style="height:auto">
                        <div class="progress-bar bg-info" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width:@(_ProgressBrandtouchpoint)%; height: 6px;"> <span class="sr-only">@(_ProgressBrandtouchpoint)% Complete</span></div>
                    </div>
                </a>


            </div>
        </div>
        <br />
        <div class="stickyside">
            <div class="list-group" id="top-menu">
                <div class="card card-body">
                    <div class="row align-items-center">
                        <p>Supplier List</p>
                        <div class="col-md-12">
                            @foreach (var sup in ViewBag.BusinessSupplier)
                            {


                                <div class="col-md-6">
                                    <a href="~/RecommendDocumentation/Packages/@sup.SupplierID"><img src="@ConfigurationManager.AppSettings["SupplierBaseUrl"]/Content/Images/@(sup.ImageID == null ? "profile-dummy.png" : sup.ImageID)" width="50" alt="user" class="img-fluid"></a>

                                    <address>
                                        @sup.CompanyName
                                    </address>
                                </div>


                            }
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
