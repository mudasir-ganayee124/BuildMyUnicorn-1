

@using Business_Model.Model;
@model Business_Model.Model.Idea
@{
    string[] ignoretypeofguidString = { "PSSelling", "PSProduce" };
    var BusinessOverview = ViewBag.BusinessOverview as IEnumerable<Business_Model.Model.LanguageModule>;
    var ProductService = ViewBag.ProductService as IEnumerable<Business_Model.Model.LanguageModule>;
    var BusinessOperation = ViewBag.BusinessOperation as IEnumerable<Business_Model.Model.LanguageModule>;
    var Competitors = ViewBag.Competitors as IEnumerable<Business_Model.Model.LanguageModule>;
}
<style>
    html body .custom-select {
        background-color: #353c48 !important;
    }
</style>
<style>
    p.form-control-static {
        border-top: 1px solid #333;
        margin-top: 5px;
        padding-left: 30px;
    }
</style>
<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h4 class="text-themecolor">  <i class="mdi mdi-arrow-left"></i>  <a href="/client?id=@ViewBag.ClientID">Back </a> </h4>
    </div>
    <div class="col-md-7 align-self-center text-right">
        <div class="d-flex justify-content-end align-items-center">
            <ol class="breadcrumb">

                <li class="breadcrumb-item"><a href="javascript:void(0)">&nbsp; &nbsp;The Busniess</a></li>

            </ol>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">

        <div class="card">

            <div class="card-body">
                <form class="form-horizontal" role="form">
                    <div class="form-body">
                        <h3 class="box-title">Business Overview</h3>


                        @if (ViewBag.ModelBusinessOverview != null)
                        {

                            foreach (System.Reflection.PropertyInfo pi in ViewBag.ModelBusinessOverview.GetType().GetProperties())
                            {
                                if (pi.PropertyType == typeof(string))
                                {
                                    string value = (string)pi.GetValue(ViewBag.ModelBusinessOverview);
                                    string propertyname = (string)pi.Name;
                                    if (BusinessOverview.Where(x => x.PropertyName == propertyname).Count() > 0)
                                    {
                                        <label class="control-label"> <span class="fa fa-circle text-info m-r-10"></span> @( BusinessOverview.Count() > 0 ? BusinessOverview.Where(x => x.PropertyName == propertyname).FirstOrDefault().QuestionText : "" )</label>


                                        if (string.IsNullOrEmpty(value))
                                        {
                                            <p class="form-control-static" style="padding-top:5px">
                                                <span class='badge badge-pill badge-danger'>Not Answered</span>
                                            </p>

                                        }
                                        else
                                        {
                                            <p class="form-control-static">@value</p>
                                        }
                                    }
                                }

                            }


                        }





                        <h1>Product Service</h1>


                        @if (ViewBag.ModelProductService != null)
                        {

                            foreach (System.Reflection.PropertyInfo pi in ViewBag.ModelProductService.GetType().GetProperties())
                            {
                                if (pi.PropertyType == typeof(string))
                                {
                                    string value = (string)pi.GetValue(ViewBag.ModelProductService);
                                    string propertyname = (string)pi.Name;
                                    if (ProductService.Where(x => x.PropertyName == propertyname).Count() > 0)
                                    {
                                        if (!Array.Exists(ignoretypeofguidString, element => element == propertyname))
                                        {
                                            <label class="control-label"> <span class="fa fa-circle text-info m-r-10"></span> @( ProductService.Count() > 0 ? ProductService.Where(x => x.PropertyName == propertyname).FirstOrDefault().QuestionText : "" )</label>


                                            if (string.IsNullOrEmpty(value))
                                            {
                                                <p class="form-control-static" style="padding-top:5px">
                                                    <span class='badge badge-pill badge-danger'>Not Answered</span>
                                                </p>

                                            }
                                            else
                                            {
                                                <p class="form-control-static">@value</p>
                                            }
                                        }
                                    }
                                }

                            }


                        }



                        <h1>Business Operation</h1>

                        @if (ViewBag.ModelBusinessOperation != null)
                        {

                            foreach (System.Reflection.PropertyInfo pi in ViewBag.ModelBusinessOperation.GetType().GetProperties())
                            {
                                if (pi.PropertyType == typeof(string))
                                {
                                    string value = (string)pi.GetValue(ViewBag.ModelBusinessOperation);
                                    string propertyname = (string)pi.Name;
                                    if (BusinessOperation.Where(x => x.PropertyName == propertyname).Count() > 0)
                                    {
                                        <label class="control-label"> <span class="fa fa-circle text-info m-r-10"></span> @( BusinessOperation.Count() > 0 ? BusinessOperation.Where(x => x.PropertyName == propertyname).FirstOrDefault().QuestionText : "" )</label>


                                        if (string.IsNullOrEmpty(value))
                                        {
                                            <p class="form-control-static" style="padding-top:5px">
                                                <span class='badge badge-pill badge-danger'>Not Answered</span>
                                            </p>

                                        }
                                        else
                                        {
                                            <p class="form-control-static">@value</p>
                                        }
                                    }
                                }

                            }


                        }



                        <h1>Competitors</h1>


                        @if (ViewBag.ModelSWOT != null)
                        {

                            foreach (System.Reflection.PropertyInfo pi in ViewBag.ModelSWOT.GetType().GetProperties())
                            {
                                if (pi.PropertyType == typeof(string))
                                {
                                    string value = (string)pi.GetValue(ViewBag.ModelSWOT);
                                    string propertyname = (string)pi.Name;
                                    if (Competitors.Where(x => x.PropertyName == propertyname).Count() > 0)
                                    {
                                        <label class="control-label"> <span class="fa fa-circle text-info m-r-10"></span> @( Competitors.Count() > 0 ? Competitors.Where(x => x.PropertyName == propertyname).FirstOrDefault().QuestionText : "" )</label>


                                        if (string.IsNullOrEmpty(value))
                                        {
                                            <p class="form-control-static" style="padding-top:5px">
                                                <span class='badge badge-pill badge-danger'>Not Answered</span>
                                            </p>

                                        }
                                        else
                                        {
                                            <p class="form-control-static">@value</p>
                                        }
                                    }
                                }

                            }


                        }






                    </div>

                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">


        <div class="stickyside">

            <div class="card">
                <div class="card-body">
                    <form id="frmRateInfo" class="form-horizontal form-material" method="post">
                        <input type="hidden" name="ModuleID" value="3" />
                        @*<input type="hidden" name="SectionID" value="1" />*@
                        <input type="hidden" name="ClientID" value="@ViewBag.ClientID" />
                        <div class="col-md-12">
                            <label>Section</label> <br /><br />
                            <div class="form-group">

                                <select class="custom-select " id="SectionID" name="SectionID">
                                    <option value="3">Business Overview</option>
                                    <option value="4">Product Service </option>
                                    <option value="8">Business Operation</option>
                                    <option value="6">Competitors</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Rate</label>

                                <input type="text" placeholder="100/100" name="Rating" class="form-control form-control-line">
                            </div>
                        </div>



                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Note</label>

                                <textarea rows="5" class="form-control form-control-line" name="Note"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-12">
                                <button type="submit" class="btn btn-success">Update</button>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
@section PageScript
{
    <script>
$("#frmRateInfo").submit(function(e){
        e.preventDefault();
        $.ajax({
        url: GetBaseURL() + "Client/AddRateInfo",
        method: "POST",
        data: $('#frmRateInfo').serialize(),
        success: function (response) {
            if (response == "OK") {
              alert("Progress Note Updated Successfully");
            }
            else {
                alert(response);
                $(".erorLabel").removeClass("invisible");
                $(".errorMessage").text(response);}
        },
        error: function (XMLHttpRequest, textStatus, errorThrown) {
            $(".erorLabel").removeClass("invisible");
            $(".errorMessage").text("Status: " + textStatus + "Error: " + errorThrown);
        }
    });


});
    $("select#SectionID").change(function() {
      $("input[name=Rating]").val("");
       $("textarea[name=Note]").val("");
       GetRateInfo();
    });

        GetRateInfo();
 function GetRateInfo()
 {
        $.ajax({
        url: GetBaseURL() + "Client/GetRateInfo",
        method: "POST",
        data: $('#frmRateInfo').serialize(),
        success: function (data) {
           $("input[name=Rating]").val(data.Rating);
           $("textarea[name=Note]").val(data.Note);
        },
        error: function (XMLHttpRequest, textStatus, errorThrown) {
            $(".erorLabel").removeClass("invisible");
            $(".errorMessage").text("Status: " + textStatus + "Error: " + errorThrown);
        }
    });
 }
    </script>

}